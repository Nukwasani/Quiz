<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#8388ff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="LET'S TEST YOUR GENERALS KNOWLEDGE"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#33FF66"
                android:textStyle="bold|italic" />

            <RadioGroup
                android:id="@+id/myGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.79">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="Grand Central Terminal, Park Avenue, New York is the world's?"
                    android:textAllCaps="false"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/rbChs1a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="largest railway station" />

                <RadioButton
                    android:id="@+id/rbChs1b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="highest railway station" />

                <RadioButton
                    android:id="@+id/rbChs1c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="longest railway station" />

                <RadioButton
                    android:id="@+id/rbChs1d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="None of the above" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="For which of the following disciplines is Nobel Prize awarded?" />

                <RadioButton
                    android:id="@+id/rbchs2a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Literature, Peace and Economics" />

                <RadioButton
                    android:id="@+id/rbChs2b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="All of the above" />

                <RadioButton
                    android:id="@+id/rbChs2c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Physiology or Medicine" />

                <RadioButton
                    android:id="@+id/rbChs2d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Physics and Chemistry" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="Hitler party which came into power in 1933 is known as" />

                <RadioButton
                    android:id="@+id/rbChs3a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Labour Party" />

                <RadioButton
                    android:id="@+id/rbChs3b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ku-Klux-Klan" />

                <RadioButton
                    android:id="@+id/rbChs3c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nazi Party" />

                <RadioButton
                    android:id="@+id/rbChs3d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Democratic Party" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="On which year was Nelson Mandela Released from prison?" />

                <RadioButton
                    android:id="@+id/rbChs4a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1990" />

                <RadioButton
                    android:id="@+id/rbChs4b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1994" />

                <RadioButton
                    android:id="@+id/rbChs4c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1989" />

                <RadioButton
                    android:id="@+id/rbChs4d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2000" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="Which year did black SouthAfricans vote for the first time?" />

                <RadioButton
                    android:id="@+id/rbChs5a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1993" />

                <RadioButton
                    android:id="@+id/rbChs5b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1990" />

                <RadioButton
                    android:id="@+id/rbChs5c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2010" />

                <RadioButton
                    android:id="@+id/rbChs5d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1994" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="Which country hosted the 2010 world cup?" />

                <RadioButton
                    android:id="@+id/rbChs6a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="United state of America" />

                <RadioButton
                    android:id="@+id/rbChs6b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Brazil" />

                <RadioButton
                    android:id="@+id/rbChs6c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="South Africa" />

                <RadioButton
                    android:id="@+id/rbChs6d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Argentina" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="Entomology is the science that studies" />

                <RadioButton
                    android:id="@+id/rbChs7a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Behavior of human beings" />

                <RadioButton
                    android:id="@+id/rbChs7b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Insects" />

                <RadioButton
                    android:id="@+id/rbChs7c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="The origin and history of technical and scientific terms" />

                <RadioButton
                    android:id="@+id/rbChs7d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="none of the above" />

                <TextView
                    android:id="@+id/tvFeedback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="" />

                <Button
                    android:id="@+id/btFeedback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="Feedback"
                    android:visibility="invisible"
                    android:text="Results" />

                <Button
                    android:id="@+id/btnAnswers2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="Answer2"
                    android:visibility="invisible"
                    android:text="Correct_Answers" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:text="CLICK THE PICTURE"
                    android:textAlignment="inherit"
                    android:textAllCaps="false"
                    android:textColor="#E91E63"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="Choose"
                    app:srcCompat="@mipmap/question_mark" />


            </RadioGroup>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
